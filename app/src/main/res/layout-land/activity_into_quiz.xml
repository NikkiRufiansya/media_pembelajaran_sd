<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_kuis_3"
    tools:context=".menu.kuis.IntoQuizActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_100sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_90sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="Panduan Kuis"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="1. Hitunglah hasil dari operasi matematika berikut ini."
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:text="2. Cara pengerjaannya : Dengan menekan dan menahan objek atau gambar dari soal berikut dan memindahkannya ke kotak, sesuai dengan soal kuis, sampai keluar hasil dan memindahkan ke kuis selanjutnya"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:text="3. Selamat Mengerjakan soalnya adik-adik ðŸ˜Š Semangattt"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:text="4. Tekan Tombol Start Untuk Memulai"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/_110sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:src="@drawable/start"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>