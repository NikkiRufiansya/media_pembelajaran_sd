<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".auth.DaftarActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ultra_violet"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="Daftar Akun"
            android:textColor="@color/white" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/et_nis"
        android:textColorHint="@color/gunmental"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/gunmental"
        android:background="@drawable/outline_edit_text"
        android:hint="Masukan NIS"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


    <EditText
        android:id="@+id/et_nama"
        android:textColor="@color/gunmental"
        android:textColorHint="@color/gunmental"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/outline_edit_text"
        android:hint="Masukan Nama"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_nis" />

    <EditText
        android:id="@+id/et_username"
        android:textColor="@color/gunmental"
        android:textColorHint="@color/gunmental"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/outline_edit_text"
        android:hint="Masukan Username"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_nama" />

    <EditText
        android:id="@+id/et_password"
        android:textColor="@color/gunmental"
        android:textColorHint="@color/gunmental"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/outline_edit_text"
        android:hint="Masukan Password"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_username" />

    <EditText
        android:id="@+id/et_tempat_lahir"
        android:textColor="@color/gunmental"
        android:textColorHint="@color/gunmental"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/outline_edit_text"
        android:hint="Masukan Tempat Lahir"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

    <EditText
        android:textColor="@color/gunmental"
        android:textColorHint="@color/gunmental"
        android:id="@+id/et_tanggal_lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/outline_edit_text"
        android:hint="Masukan Tanggal Lahir"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_tempat_lahir" />

    <EditText
        android:id="@+id/et_umur"
        android:textColor="@color/gunmental"
        android:textColorHint="@color/gunmental"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/outline_edit_text"
        android:hint="Masukan Umur"
        android:padding="10dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/et_tanggal_lahir" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_register"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/et_umur"
        app:cardBackgroundColor="@color/shamrock_green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:textSize="@dimen/_14ssp"
            android:text="Daftar"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>