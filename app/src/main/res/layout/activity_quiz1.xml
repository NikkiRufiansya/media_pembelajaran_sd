<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.kuis.Quiz1Activity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/black"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>

        <View
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/baseline_add_24"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>
        <View
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/black"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>

        <View
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/black"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/_60ssp"
            android:textStyle="bold"
            android:text="="
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <GridLayout
        android:id="@+id/ll_top"
        android:background="@color/material_dynamic_secondary70"
        android:layout_weight="1"
        android:rowCount="2"
        android:columnCount="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/dragView1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp" />

        <View
            android:id="@+id/dragView2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp" />

        <View
            android:id="@+id/dragView3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp" />

        <View
            android:id="@+id/dragView4"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp" />

        <View
            android:id="@+id/dragView5"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp" />

        <View
            android:id="@+id/dragView6"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp" />

        <View
            android:id="@+id/dragView7"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp" />

        <View
            android:id="@+id/dragView8"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp" />

    </GridLayout>

    <TextView
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:text="Taruh Jawaban di sini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <GridLayout
        android:id="@+id/ll_bottom"
        android:background="@color/design_default_color_secondary_variant"
        android:layout_weight="1"
        android:rowCount="2"
        android:columnCount="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    </GridLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_back"
            android:text="Kembali"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:backgroundTint="@color/cardview_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_next"
            android:text="Lanjutkan"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:backgroundTint="@color/cardview_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>